{
    "name": "maxkut/amocrm",
    "description": "OOP library for AmoCRM API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Maksim Kutishchev",
            "email": "max@amopro.ru"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "amocrm/oauth2-amocrm": "^2.0",
        "guzzlehttp/guzzle": "~6.0",
        "nesbot/carbon": "^1|^2",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "monolog/monolog": "^2.0",
        "phpunit/phpunit": "^8.4",
        "symfony/dotenv": "^4.3",
        "symfony/var-dumper": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "AmoPRO\\AmoCRM\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Examples\\": "examples/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
